<article class="post">

  <div class="title card-header meta bg-primary col-8" id="post-card">
    <p href="{{post_comment}}" class="card-header" target="_blank">{{title}} Posted by {{user.username}} on
      {{format_date created_at}}</p>
  </div>

    {{post_url}}

    <div class="column col-">
      <a href="/post/{{id}}"><i class="far fa-comments upvote" data-id="{{id}}">{{format_plural
          "Comment" comments.length}}</i></a>
    </div>

</article>