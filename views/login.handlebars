<div class="container">
  <div class="columns col-8">

    <form class="login-form bg-gray form-group col-mx-auto">
      <div>
        <label for="email-login" class="form-label">email:</label>
        <input type="text" class="form-input" id="email-login" />
      </div>
      <div>
        <label for="password-login" class="form-label">password:</label>
        <input type="password" class="form-input" id="password-login" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-lg">login</button>
      </div>
    </form>
    {{!-- a button to take me to a sign up screen
    instead of having them both on the same section --}}

    <form class="signup-form col-mx-auto">
      <div>
        <label for="username-signup" class="form-label">username:</label>
        <input type="text" class="form-input" id="username-signup" />
      </div>
      <div>
        <label for="email-signup" class="form-label">email:</label>
        <input type="text" class="form-input" id="email-signup" />
      </div>
      <div>
        <label for="password-signup" class="form-label">password:</label>
        <input type="password" class="form-input" id="password-signup" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-lg">signup</button>
      </div>
    </form>
  </div>
  <script src="/javascript/login.js"></script>